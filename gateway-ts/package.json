{
  "name": "ibn-gateway-api",
  "version": "0.0.1",
  "description": "Gateway API for ICTU Blockchain Network - Forward transactions to Hyperledger Fabric",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.9.0",
    "@hyperledger/fabric-gateway": "^1.4.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-forge": "^1.3.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.19.26",
    "@types/node-forge": "^1.3.11",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "_moduleAliases": {
    "@": "dist",
    "@config": "dist/config",
    "@core": "dist/core",
    "@middleware": "dist/middleware",
    "@models": "dist/models",
    "@services": "dist/services",
    "@routes": "dist/routes",
    "@utils": "dist/utils"
  }
}
