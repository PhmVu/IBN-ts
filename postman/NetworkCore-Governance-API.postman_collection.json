{
    "info": {
        "name": "IBN NetworkCore Governance API",
        "description": "Test collection for NetworkCore v0.0.4 governance endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "variable": [
        {
            "key": "baseUrl",
            "value": "http://localhost:3000",
            "type": "string"
        },
        {
            "key": "token",
            "value": "",
            "type": "string"
        }
    ],
    "item": [
        {
            "name": "Auth",
            "item": [
                {
                    "name": "Login as SuperAdmin",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "pm.test('Login successful', function() {",
                                    "    pm.response.to.have.status(200);",
                                    "    const response = pm.response.json();",
                                    "    pm.environment.set('token', response.token);",
                                    "});"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"admin123\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/auth/login",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "auth",
                                "login"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Organizations",
            "item": [
                {
                    "name": "Query Organizations",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/governance/organizations",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "governance",
                                "organizations"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Organization by ID",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/governance/organizations/IBN",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "governance",
                                "organizations",
                                "IBN"
                            ]
                        }
                    }
                },
                {
                    "name": "Register Organization",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"orgId\": \"EXAMPLE-ORG\",\n  \"mspId\": \"ExampleOrgMSP\",\n  \"name\": \"Example Organization\",\n  \"domain\": \"example.com\",\n  \"contactEmail\": \"admin@example.com\",\n  \"contactPhone\": \"+1-555-0100\",\n  \"address\": \"123 Example St\",\n  \"businessLicense\": \"BL-EXAMPLE-001\",\n  \"taxId\": \"TAX-EXAMPLE-001\",\n  \"certifications\": [\"ISO9001\", \"ISO27001\"],\n  \"caUrl\": \"http://ca.example.com:7054\",\n  \"peerEndpoints\": [\"peer0.example.com:7051\"],\n  \"metadata\": {}\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/governance/organizations",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "governance",
                                "organizations"
                            ]
                        }
                    }
                },
                {
                    "name": "Approve Organization",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"comments\": \"Organization verified and approved\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/governance/organizations/EXAMPLE-ORG/approve",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "governance",
                                "organizations",
                                "EXAMPLE-ORG",
                                "approve"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Chaincodes",
            "item": [
                {
                    "name": "Query Proposals",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/governance/chaincodes",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "governance",
                                "chaincodes"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Chaincode History",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/governance/chaincodes/tea-traceability/history",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "governance",
                                "chaincodes",
                                "tea-traceability",
                                "history"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "Statistics",
            "item": [
                {
                    "name": "Get Platform Statistics",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}"
                            }
                        ],
                        "url": {
                            "raw": "{{baseUrl}}/api/v1/governance/statistics",
                            "host": [
                                "{{baseUrl}}"
                            ],
                            "path": [
                                "api",
                                "v1",
                                "governance",
                                "statistics"
                            ]
                        }
                    }
                }
            ]
        }
    ]
}